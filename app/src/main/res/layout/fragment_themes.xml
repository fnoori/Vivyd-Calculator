                    android:drawableRight="@drawable/wtrm_icon"
                    android:drawableLeft="@drawable/wtrm_icon"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="SORBET"
                    android:id="@+id/snoButton"
                    android:background="@color/SNO_numpad"
                    android:textColor="@color/SNO_oppTray"
                    android:drawableRight="@drawable/sund_icon"
                    android:drawableLeft="@drawable/cher_icon"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Blueberry"
                    android:id="@+id/papButton"
                    android:background="@color/PAP_numpad"
                    android:textColor="@color/PAP_text_screen"
                    android:drawableRight="@drawable/pap_icon"
                    android:drawableLeft="@drawable/pap_icon"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="MOCHA"
                    android:id="@+id/chocButton"
                    android:background="@color/CHOC_numpad"
                    android:textColor="@color/CHOC_text"
                    android:drawableRight="@drawable/moch_icon"
                    android:drawableLeft="@drawable/choc_icon"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Piña colada"
                    android:id="@+id/pinButton"
                    android:background="@color/PIN_colorAccent"
                    android:textColor="@color/PIN_numpad"
                    android:drawableRight="@drawable/pin_icon"
                    android:drawableLeft="@drawable/pin_icon"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="PEPPERMINT"
                    android:id="@+id/pepButton"
