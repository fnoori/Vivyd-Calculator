<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BASIC_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:src="@drawable/a_main_shad_updown" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView9"
            android:src="@drawable/a_main_shad_downup" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you for your support!"
                android:id="@+id/textView"
                android:textSize="23sp"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=": )"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingBottom="40dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The two students behind Vivyd Calculator would like to thank you personally for using our app."

                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="With every calculation, our drive to improve Vivyd Calculator grows. "
                android:id="@+id/textView5"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inspire us:"
                android:id="@+id/textView3"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:paddingBottom="20sp"
                android:textColor="#ffffff" />

        </LinearLayout>
    </FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/adfButton"
        android:text="Go Ad-Free for $1"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_red_light"
        android:cropToPadding="false"
        android:textColor="#ffffff" />

</LinearLayout>