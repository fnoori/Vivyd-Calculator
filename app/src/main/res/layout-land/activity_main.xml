                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:layout_margin="0dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:id="@+id/twoButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:layout_margin="0dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:id="@+id/threeButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:layout_margin="0dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="."
                            android:id="@+id/dotButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:layout_margin="0dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/zeroButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:layout_margin="0dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="="
                            android:id="@+id/eqlButton"
                            android:background="@drawable/basic_main_transition"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextSecondary"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:layout_marginLeft="1dp"
                            android:stateListAnimator="@null"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:layout_margin="0dp" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/menuButton"
                        android:background="@drawable/basic_main_transition_top"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="20sp"
                        android:shadowColor="#64212121"
                        android:shadowDx="2"
                        android:shadowDy="3"
                        android:shadowRadius="20"
                        android:layout_marginLeft="1dp"
                        android:stateListAnimator="@null" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageMenu"
                        android:src="@drawable/ic_color_lens_24dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="1dp" />
                </FrameLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="÷"
                    android:id="@+id/divButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="×"
                    android:id="@+id/multButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="−"
                    android:id="@+id/minusButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/addButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>