                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif-light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="x³"
                        android:textAllCaps="false"
                        android:id="@+id/cubButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="13sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif-light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="xⁿ"
                        android:textAllCaps="false"
                        android:id="@+id/pwrButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="13sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif-light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="x⁻¹"
                        android:id="@+id/oneOverxButton"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="13sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif-light" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textAllCaps="false"
                        android:id="@+id/var1Button"
                        android:layout_weight="2"
                        android:background="@drawable/blue_numpad_transition"
                        android:textColor="@color/colorTextAccentLight"
                        android:textSize="15sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textAllCaps="false"
                        android:id="@+id/var2Button"
                        android:layout_weight="3"
                        android:background="@drawable/blue_numpad_transition"
                        android:textColor="@color/colorTextAccentLight"
                        android:textSize="15sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textAllCaps="false"
                        android:id="@+id/var3Button"
                        android:layout_weight="3"
                        android:background="@drawable/blue_numpad_transition"
                        android:textColor="@color/colorTextAccentLight"
                        android:textSize="15sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light" />

                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView7"
                android:background="@drawable/a_main_shad_right"
                android:layout_gravity="right" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:id="@+id/fourByfour"
            android:baselineAligned="false"
            android:layout_toRightOf="@+id/overlaySci">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/popSpace"
                android:splitMotionEvents="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:splitMotionEvents="false">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="("
                            android:id="@+id/openBrace"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"
                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/numLeftBrace"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorMain"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:textSize="10sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=")"
                            android:id="@+id/closeBrace"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"
                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/numRightBrace"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorMain"
                            android:layout_marginRight="12dp"
                            android:layout_gravity="right"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/delButton"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"

                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageDel"
                            android:src="@drawable/ic_backspace_24dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="false"
                            android:layout_margin="13dp" />
                    </FrameLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C"
                        android:id="@+id/clrButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_noshad"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextAccent"
                        android:stateListAnimator="@null"
                        android:shadowColor="#239e9e9e"
                        android:shadowDx="-3"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:fontFamily="sans-serif-light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="%"
