<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPopup"
    android:id="@+id/backgroundView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BLUE_colorAccent"
        android:id="@+id/adLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <ImageButton
                android:layout_width="50dp"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                android:text="i"
                android:id="@+id/inspireButton"
                android:textColor="@color/colorTextNumpad"
                android:theme="@style/AppTheme"
                android:background="@android:color/holo_red_light"
                android:src="@android:drawable/ic_dialog_email"
                android:scaleType="centerInside"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginLeft="2dp" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"
                android:layout_weight="1">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eqnView"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textColor="@color/colorTextMain"
        android:layout_weight="2.5"
        android:background="@color/BLUE_colorAccent"
        android:gravity="right"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RAD"
            android:id="@+id/degRandButton"
            android:textColor="@color/colorNumpad"
            android:elegantTextHeight="false"
            android:stateListAnimator="@null"
            android:layout_weight="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:background="@color/BLUE_colorAccent"
            android:gravity="bottom|end"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
 />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ansView"
            android:textIsSelectable="true"
            android:inputType="none"
            android:cursorVisible="true"
            android:textSize="35sp"
            android:background="@color/BLUE_colorAccent"
            android:textColor="@color/colorTextMain"
            android:gravity="top|right"
            android:layout_alignParentBottom="true"
            android:autoText="false"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wholeView"
        android:splitMotionEvents="false"
        android:layout_weight="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:gravity="bottom|end"
            android:layout_weight="1"
            android:splitMotionEvents="false"
            android:layout_marginRight="2dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:splitMotionEvents="false"
                android:layout_margin="0dp" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="log"
                    android:textAllCaps="false"
                    android:id="@+id/logButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:id="@+id/lnButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ans"
                    android:textAllCaps="false"
                    android:id="@+id/ansButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:text="ᴇᴇ"
                    android:id="@+id/powerOfTenButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="1dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:splitMotionEvents="false"
                android:layout_marginBottom="1dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:id="@+id/sineButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:id="@+id/cosineButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:id="@+id/tangentButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="π"
                    android:textAllCaps="false"
                    android:id="@+id/piButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:splitMotionEvents="false"
                android:layout_margin="0dp" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:text="e"
                    android:id="@+id/eButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="√x"
                    android:textAllCaps="false"
                    android:id="@+id/sqrtButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ⁿ√x"
                    android:textAllCaps="false"
                    android:id="@+id/usrDefinedRoot"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x!"
                    android:textAllCaps="false"
                    android:id="@+id/facttButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:splitMotionEvents="false"
                android:layout_margin="0dp" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x²"
                    android:textAllCaps="false"
                    android:id="@+id/sqrButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x³"
                    android:textAllCaps="false"
                    android:id="@+id/cubButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="xⁿ"
                    android:textAllCaps="false"
                    android:id="@+id/pwrButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x⁻¹"
                    android:id="@+id/oneOverxButton"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:splitMotionEvents="false"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAllCaps="false"
                    android:id="@+id/var3Button"
                    android:layout_weight="2"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextAccentLight"
                    android:textSize="15dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAllCaps="false"
                    android:id="@+id/var1Button"
                    android:layout_weight="3"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextAccentLight"
                    android:textSize="15sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAllCaps="false"
                    android:id="@+id/var2Button"
                    android:layout_weight="3"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextAccentLight"
                    android:textSize="15dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:splitMotionEvents="false"
            android:id="@+id/fourByfour">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/popSpace"
                android:splitMotionEvents="false"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:splitMotionEvents="false">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="("
                            android:id="@+id/openBrace"
                            android:layout_weight="1"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"
                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/numLeftBrace"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorMain"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:textSize="10sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=")"
                            android:id="@+id/closeBrace"
                            android:layout_weight="1"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"
                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/numRightBrace"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorMain"
                            android:layout_marginRight="12dp"
                            android:layout_gravity="right"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="%"
                        android:id="@+id/prcntButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_noshad"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextAccent"
                        android:stateListAnimator="@null"
                        android:shadowColor="#239e9e9e"
                        android:shadowDx="-3"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/delButton"
                            android:layout_weight="1"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"

                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageDel"
                            android:src="@drawable/ic_backspace_24dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="false"
                            android:layout_margin="13dp" />
                    </FrameLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C"
                        android:id="@+id/clrButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_noshad"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextAccent"
                        android:stateListAnimator="@null"
                        android:shadowColor="#239e9e9e"
                        android:shadowDx="-3"
                        android:shadowDy="1"
                        android:shadowRadius="5" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:splitMotionEvents="false"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:id="@+id/sevenButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_top"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginBottom="1dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:id="@+id/eightButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_top"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:id="@+id/nineButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_top"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:backgroundTintMode="src_over" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:splitMotionEvents="false"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:id="@+id/fourButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:id="@+id/fiveButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginLeft="1dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:id="@+id/sixButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginLeft="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:splitMotionEvents="false"
                    android:id="@+id/scndRow">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:id="@+id/oneButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginTop="1dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:id="@+id/twoButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:id="@+id/threeButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:splitMotionEvents="false"
                    android:id="@+id/bottomRow"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="."
                        android:id="@+id/dotButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginTop="1dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/zeroButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition"
                        android:textSize="15sp"
                        android:textColor="@color/colorTextNumpad"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="="
                        android:id="@+id/eqlButton"
                        android:background="@drawable/basic_main_transition"
                        android:textSize="20sp"
                        android:textColor="@color/colorTextSecondary"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_marginLeft="1dp"
                        android:stateListAnimator="@null"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/menuButton"
                        android:background="@drawable/basic_main_transition_top"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="20sp"
                        android:shadowColor="#64212121"
                        android:shadowDx="2"
                        android:shadowDy="3"
                        android:shadowRadius="20"

                        android:layout_weight="1"
                        android:layout_marginLeft="1dp"
                        android:stateListAnimator="@null" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageMenu"
                        android:src="@drawable/ic_color_lens_24dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="1dp" />
                </FrameLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="÷"
                    android:id="@+id/divButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="×"
                    android:id="@+id/multButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="−"
                    android:id="@+id/minusButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/addButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginBottom="1dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>