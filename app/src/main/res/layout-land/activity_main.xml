<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPopup"
    android:id="@+id/backgroundView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextAccentLight"
        android:id="@+id/display">

        <RelativeLayout
            android:id="@+id/adLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

                <ImageButton
                    android:layout_width="50dp"
                    android:textAllCaps="false"
                    android:layout_height="50dp"
                    android:text="i"
                    android:id="@+id/inspireButton"
                    android:textColor="@color/colorTextNumpad"
                    android:theme="@style/AppTheme"
                    android:background="@android:color/holo_red_light"
                    android:src="@android:drawable/ic_dialog_email"
                    android:scaleType="centerInside"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginStart="2dp"
                    android:contentDescription="msgButton" />

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id"
                    android:layout_toRightOf="@+id/inspireButton"
                    android:layout_toEndOf="@+id/inspireButton"
                    >
                </com.google.android.gms.ads.AdView>

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/eqnView"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:textColor="@color/colorTextMain"
            android:layout_weight="2.5"
            android:background="#00ffffff"
            android:gravity="end"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="textStart"
            android:paddingStart="100dp" />

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ansView"
                android:textIsSelectable="true"
                android:inputType="none"
                android:cursorVisible="true"
                android:textSize="35sp"
                android:background="#00ffffff"
                android:textColor="@color/colorTextMain"
                android:gravity="top|end"
                android:autoText="false"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:fontFamily="sans-serif-light" />

            <Button
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:text="RAD"
                android:id="@+id/degRandButton"
                android:textColor="@color/colorNumpad"
                android:elegantTextHeight="false"
                android:stateListAnimator="@null"
                android:textSize="13sp"
                android:gravity="bottom|end"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:background="#00ffffff" />

        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wholeViewLAND"
        android:splitMotionEvents="false"
        android:layout_weight="1"
        android:baselineAligned="false">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/sciTable"
            android:splitMotionEvents="false"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="log"
                    android:textAllCaps="false"
                    android:id="@+id/logButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:id="@+id/lnButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ans"
                    android:textAllCaps="false"
                    android:id="@+id/ansButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart ="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="ᴇᴇ"
                    android:id="@+id/powerOfTenButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_noshad"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart ="1dp"
                    android:fontFamily="sans-serif-light" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:id="@+id/sineButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:id="@+id/cosineButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart ="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:id="@+id/tangentButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="π"
                    android:textAllCaps="false"
                    android:id="@+id/piButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition_top"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:text="e"
                    android:id="@+id/eButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ⁿ√x"
                    android:textAllCaps="false"
                    android:id="@+id/usrDefinedRoot"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart ="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="√x"
                    android:textAllCaps="false"
                    android:id="@+id/sqrtButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart ="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x!"
                    android:textAllCaps="false"
                    android:id="@+id/facttButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x²"
                    android:textAllCaps="false"
                    android:id="@+id/sqrButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x³"
                    android:textAllCaps="false"
                    android:id="@+id/cubButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="xⁿ"
                    android:textAllCaps="false"
                    android:id="@+id/pwrButton"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="x⁻¹"
                    android:id="@+id/oneOverxButton"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="13sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-light" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAllCaps="false"
                    android:id="@+id/var1Button"
                    android:layout_weight="2"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextAccentLight"
                    android:textSize="15sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAllCaps="false"
                    android:id="@+id/var2Button"
                    android:layout_weight="3"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextAccentLight"
                    android:textSize="15sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAllCaps="false"
                    android:id="@+id/var3Button"
                    android:layout_weight="3"
                    android:background="@drawable/blue_numpad_transition"
                    android:textColor="@color/colorTextAccentLight"
                    android:textSize="15sp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="sans-serif-light" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:layout_toRightOf="@+id/sciTable"
            android:id="@+id/fourByfour"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/popSpace"
                android:splitMotionEvents="false"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:splitMotionEvents="false">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="("
                            android:id="@+id/openBrace"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"
                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/numLeftBrace"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorMain"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:textSize="10sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=")"
                            android:id="@+id/closeBrace"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"
                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/numRightBrace"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorMain"
                            android:layout_marginRight="12dp"
                            android:layout_gravity="right"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="%"
                        android:id="@+id/prcntButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_noshad"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextAccent"
                        android:stateListAnimator="@null"
                        android:shadowColor="#239e9e9e"
                        android:shadowDx="-3"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:fontFamily="sans-serif-light" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/delButton"
                            android:background="@drawable/blue_numpad_transition_noshad"
                            android:textSize="13sp"
                            android:textColor="@color/colorTextAccent"
                            android:stateListAnimator="@null"

                            android:shadowColor="#239e9e9e"
                            android:shadowDx="-3"
                            android:shadowDy="1"
                            android:shadowRadius="5"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageDel"
                            android:src="@drawable/ic_backspace_24dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="false"
                            android:layout_margin="13dp" />
                    </FrameLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C"
                        android:id="@+id/clrButton"
                        android:layout_weight="1"
                        android:background="@drawable/blue_numpad_transition_noshad"
                        android:textSize="13sp"
                        android:textColor="@color/colorTextAccent"
                        android:stateListAnimator="@null"
                        android:shadowColor="#239e9e9e"
                        android:shadowDx="-3"
                        android:shadowDy="1"
                        android:shadowRadius="5"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:splitMotionEvents="false"
                    android:measureWithLargestChild="false"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:id="@+id/sevenButton"
                            android:background="@drawable/blue_numpad_transition_top"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:id="@+id/eightButton"
                            android:background="@drawable/blue_numpad_transition_top"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:id="@+id/nineButton"
                            android:background="@drawable/blue_numpad_transition_top"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:backgroundTintMode="src_over"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="4"
                            android:id="@+id/fourButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:id="@+id/fiveButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="6"
                            android:id="@+id/sixButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/oneButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:id="@+id/twoButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:id="@+id/threeButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="."
                            android:id="@+id/dotButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:id="@+id/zeroButton"
                            android:background="@drawable/blue_numpad_transition"
                            android:textSize="15sp"
                            android:textColor="@color/colorTextNumpad"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="="
                            android:id="@+id/eqlButton"
                            android:background="@drawable/basic_main_transition"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextSecondary"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:layout_marginLeft="1dp"
                            android:stateListAnimator="@null"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/menuButton"
                        android:background="@drawable/basic_main_transition_top"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="20sp"
                        android:shadowColor="#64212121"
                        android:shadowDx="2"
                        android:shadowDy="3"
                        android:shadowRadius="20"
                        android:layout_marginLeft="1dp"
                        android:stateListAnimator="@null" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageMenu"
                        android:src="@drawable/ic_color_lens_24dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="1dp" />
                </FrameLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="÷"
                    android:id="@+id/divButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="×"
                    android:id="@+id/multButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="−"
                    android:id="@+id/minusButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="sans-serif-light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/addButton"
                    android:layout_weight="1"
                    android:background="@drawable/basic_main_transition"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextSecondary"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>