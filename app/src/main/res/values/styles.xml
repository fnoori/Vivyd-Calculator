<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPopup</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasicTheme" parent="AppTheme">
        <item name="android:buttonStyle">@style/BasicButton</item>
    </style>

    <style name="BasicButton">
        <item name="android:background">@drawable/numbutton</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorTextNumpad</item>
    </style>


</resources>
